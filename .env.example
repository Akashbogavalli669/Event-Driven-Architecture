# === Database Configuration ===
# The host 'db' matches the service name in docker-compose
DB_HOST=db
DB_PORT=5432
DB_NAME=event_db
DB_USER=postgres
DB_PASSWORD=secret_password_change_me

# === Kafka Configuration ===
# The host 'kafka' matches the service name in docker-compose
KAFKA_BROKER_URL=kafka:29092
KAFKA_TOPIC=order_events
KAFKA_CONSUMER_GROUP_ID=order_processor_group

# === Producer Service Configuration ===
PRODUCER_API_HOST=0.0.0.0
PRODUCER_API_PORT=8000

# === Consumer Service Configuration ===
# The port the consumer exposes for health checks
CONSUMER_HEALTH_PORT=8001